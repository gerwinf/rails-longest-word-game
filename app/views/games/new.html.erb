<h1>New game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p>
 -->
<div class="letter">
  <%@letters.each do |letter| %>
    <div class="box">
      <%=letter%>
    </div>
  <%end %>
</div>


<div class="form">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word">What is the longest word you can find?</label>
    <input type="text" name="word">
    <input id="token" name="token" type="hidden" value="<%= @letters.join('') %>" />
    <button type="submit" class="btn btn-primary mb-2">Play</button>
  </form>
</div>

